<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/turnover_element_height"
    android:layout_marginTop="@dimen/element_top_margin"
    android:layout_marginLeft="@dimen/element_top_margin"
    android:layout_marginRight="@dimen/element_top_margin"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/element_radius"
    app:cardPreventCornerOverlap="false"
    tools:ignore="UseCompoundDrawables"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/iconDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/turnover_icon_height"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/turnover_text_margin"
                android:layout_marginTop="@dimen/turnover_text_margin"
                >

                <ImageView
                    android:id="@+id/turnover_icon"
                    android:layout_width="@dimen/turnover_icon_height"
                    android:layout_height="@dimen/turnover_icon_height"
                    app:srcCompat="@drawable/ic_calendar_icon"
                    android:layout_gravity="center"
                    android:contentDescription="@string/icon_description" />

                <TextView
                    android:id="@+id/turnover_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temp_turnover_date"
                    android:textSize="@dimen/turnover_data_text_size"
                    android:textColor="@color/black_two"
                    android:layout_marginStart="@dimen/turnover_data_margin_start"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/turnover_text"
                android:layout_marginTop="@dimen/turnover_text_margin"
                android:layout_marginStart="@dimen/turnover_text_margin"
                android:layout_marginEnd="@dimen/turnover_text_margin"
                android:layout_below="@id/iconDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_two"
                android:textSize="@dimen/turnover_text_size"
                android:text="@string/temp_turnover_wine_name"
                android:lines="2"
                android:ellipsize="end"
                />

            <LinearLayout
                android:layout_below="@id/turnover_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/turnover_text_margin"
                android:layout_marginTop="@dimen/turnover_text_margin"
                android:gravity="center_vertical"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/turnover_box_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white_four"
                    app:cardCornerRadius="@dimen/element_radius"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    android:layout_marginEnd="@dimen/turnover_count_element_margin_between"
                    >

                    <LinearLayout
                        android:layout_width="@dimen/turnover_count_element_width"
                        android:layout_height="@dimen/dashboard_icon_size"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        >

                        <ImageView
                            android:id="@+id/turnover_box_icon"
                            android:layout_width="@dimen/dashboard_icon_size"
                            android:layout_height="@dimen/dashboard_icon_size"
                            app:srcCompat="@drawable/ic_boxes_pictogram"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/turnover_count_element_margin"
                            android:contentDescription="@string/icon_description"
                            android:paddingStart="@dimen/padding_for_icon"
                            android:paddingEnd="@dimen/padding_for_icon"
                            />

                        <TextView
                            android:id="@+id/turnover_box_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/temp_turnover_count_2"
                            android:textColor="@color/black_two"
                            android:gravity="center"
                            android:textSize="@dimen/turnover_count_element_text_size"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/turnover_bottle_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white_four"
                    app:cardCornerRadius="@dimen/element_radius"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    >

                    <LinearLayout
                        android:layout_width="@dimen/turnover_count_element_width"
                        android:layout_height="@dimen/dashboard_icon_size"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        >

                        <ImageView
                            android:id="@+id/turnover_bottle_icon"
                            android:layout_width="@dimen/dashboard_icon_size"
                            android:layout_height="@dimen/dashboard_icon_size"
                            app:srcCompat="@drawable/ic_shape"
                            android:layout_margin="@dimen/turnover_count_element_margin"
                            android:layout_gravity="center"
                            android:contentDescription="@string/icon_description"
                            android:paddingStart="@dimen/padding_for_icon"
                            android:paddingEnd="@dimen/padding_for_icon"
                            />

                        <TextView
                            android:id="@+id/turnover_bottle_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/temp_turnover_count_1"
                            android:textColor="@color/black_two"
                            android:gravity="center"
                            android:textSize="@dimen/turnover_count_element_text_size"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

</android.support.v7.widget.CardView>

