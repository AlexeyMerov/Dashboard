<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.woxapp.task.dashboard.activity.EnterActivity"
    android:id="@+id/activity_enter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_background"
    android:gravity="center"
    tools:ignore="NestedWeights"
    >

        <android.support.v7.widget.CardView
        android:layout_width="600dp"
        android:layout_height="400dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        >

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners"
            android:orientation="vertical"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            >

                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="@color/black_two"
                android:text="@string/text_enter_topic"
                />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/loader_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:indicator="BallPulse"
                app:indicator_color="@color/hazel"
                android:layout_weight="1"/>

        </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    >

                    <EditText
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:textSize="25sp"
                        android:hint="@string/text_hint_login"
                        android:textColorHint="@color/colorGrey"
                        android:textColor="@color/black_two"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/loginError"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/red"
                        android:layout_weight="2"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    >

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:textSize="25sp"
                        android:inputType="textPassword"
                        android:hint="@string/text_hint_password"
                        android:textColorHint="@color/colorGrey"
                        android:textColor="@color/black_two"
                        android:layout_weight="1"

                        />

                    <TextView
                        android:id="@+id/passwordError"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/red"
                        android:layout_weight="2"
                        />

                </LinearLayout>

                <Button
                android:id="@+id/enter_button"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/text_enter_button"
                android:layout_gravity="center"
                android:background="@drawable/button_with_shadow"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="150dp"
                />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>
